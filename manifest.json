{
    "manifest_version": 1,
    "name": "BrowserTracker",
    "description": "This extension records and displays statistics about browsing history.",
    "version": "1.0",
    "browser_action": {
        "default_icon": "cloud-computing.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["tracking.js"]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ]
}